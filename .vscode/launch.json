    "version": "0.2.0", 
    "configurations": [        
        {
            "name": "LocalWorker",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "Worker",
                    "127.0.0.1:9001",
                    // "--exclude=Gateway"
            ],
            "cwd": "${workspaceFolder}/build/debug/",
        },
        {
            "name": "LocalManager",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "Manager",
                    "0.0.0.0:9001"
            ],
            "cwd": "${workspaceFolder}/build/debug/",
            // "preLaunchTask": "build",
        },
        {
            "name": "RemoteWorker",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "Worker",
                    "192.168.10.10:9001"
            ],
           
            "cwd": "${workspaceFolder}/build/debug/",
        }
        
    ]
}